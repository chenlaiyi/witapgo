.page-section {
    width: auto;
    margin: 30rpx;
    padding: 64rpx 30rpx;
    background-color: #fff;
    text-align: center;
    font-size: 28rpx;
}

.desc {
    color: #B2B2B2;
}

.price {
    margin-top: 30rpx;
    margin-bottom: 25rpx;
    position: relative;
    display: inline-block;
    font-size: 78rpx;
    line-height: 1;
}

.price:before {
    content: "Â¥";
    position: absolute;
    font-size: 40rpx;
    top: 8rpx;
    left: -40rpx;
}

.common_mb_bg1 {
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.6);
    z-index: 3;
}

.show-btn {
    margin-top: 100rpx;
    color: #22cc22;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 4;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 4;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 10rpx;
}

.modal-title {
    padding-top: 22rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 50rpx 32rpx;
}

.modal-input {
    border-radius: 4rpx;
    font-size: 26rpx;
    color: #4f4f4f;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-confirm {
    width: 100%;
    color: #14a247;
    text-align: center;
}