page {
    background-color: #F8F8F8;
    height: 100%;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    margin-top: 55px;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    align-items: center;
    margin-top: 200px;
    margin-left: 37%;
    width: 100px;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
}

.btn {
    font-size: 13px;
    font-weight: bold;
    line-height: 80rpx;
}

.foot {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 180px;
}

.copyright {
    font-size: 11px;
}

.login-user {
    background-color: transparent;
    padding: 0;
    margin: 0;
    display: inline;
    position: static;
    border: 0;
    padding-left: 0;
    padding-right: 0;
    border-radius: 0;
    font-size: 0rpx;
    color: transparent;
}

.login-user::after {
    content: '';
    width: 0;
    height: 0;
    transform: scale(1);
    display: none;
    background-color: transparent;
}

.common_mb_bg1 {
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.6);
    z-index: 3;
}

.show-btn {
    margin-top: 100rpx;
    color: #22cc22;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 4;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 4;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 10rpx;
}

.modal-title {
    padding-top: 22rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 50rpx 32rpx;
}

.modal-input {
    border-radius: 4rpx;
    font-size: 26rpx;
    color: #4f4f4f;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-confirm {
    width: 100%;
    color: #14a247;
    text-align: center;
}